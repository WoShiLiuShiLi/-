<view class="jxyg_index">
<!-- 搜索开始 -->
<SearchInput></SearchInput>
<!-- 搜索结束 -->
<!-- 轮播开始 -->
<view class="swiper_index">
    <!-- 
        1 swiper有默认的宽度和高度
          100% * 150px
        2 image有默认的宽度和高度
          320px * 240px
        3 设计图片和轮播图
          1 查看图片宽高 750px * 340px
          2 让图片的高度自适应，宽度100%  
     -->
    <swiper indicator-dots="true" autoplay="true" circular="true">
        <swiper-item wx:for="{{swiperList}}" wx:key="goods_id">
            <navigator>
                <image src="{{item.image_src}}" mode="widthFix" /> 
            </navigator>
        </swiper-item>       
    </swiper>
      
</view>
<!-- 轮播结束 -->
<!-- 导航开始 -->
<view class="cate_index">
    <navigator wx:for="{{catesList}}" wx:key="name" url="" open-type="navigate">
        <image src="{{item.image_src}}" mode="widthFix" />
          
    </navigator>
      
</view>
<!-- 导航结束 -->

<!-- 楼层开始 -->
<view class="floor_index">
    <view class="floor_group"
    wx:for="{{floorList}}"
    wx:for-item="item1"
    wx:for-index="index1"
    wx:key="floor_title"
    >
        <!-- 标题 -->
        <view class="floor_title">
            <image src="{{item1.floor_title.image_src}}" mode="widthFix"/>
        </view>
        <!-- 内容 -->
        <view class="floor_list">
            <navigator 
            wx:for="{{item1.product_list}}" 
            wx:for-item="item2" 
            wx:for-index="index2"
            wx:key="name"
            url=""
            >
                <image mode="{{index2===0? 'widthFix':'scaleToFill'}}" src="{{item2.image_src}}" />
                  
            </navigator>
              
        </view>
    </view>
      
</view>
<!-- 楼层结束 -->
</view>